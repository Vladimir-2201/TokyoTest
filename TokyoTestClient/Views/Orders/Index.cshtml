@model List<OrderModel>
@{
    ViewData["Title"] = "Заказы";
}

<h1>Заказы</h1>

<div class="m-2">
    <a class="btn btn-success" asp-action="Create">Добавить</a>
    <a class="btn btn-primary" asp-action="Index">Обновить список</a>
</div>

<table class="table table-hover">
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-start align-middle">
                <td style="word-wrap: break-word">
                    @Html.DisplayFor(modelItem => item.OrderText)
                </td>
                <td class="col-1">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="@item.Id" name="Id" id="Id" />
                        <input class="btn btn-danger" type="submit" value="Удалить" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>